<!DOCTYPE html>
<html>
  <head>
    <title>NewBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header style="background-color: black; height: 50px;">
      <span style="color: white; font-size: 20px; padding-left: 50px;">Bookers</span>
      <nav id="slidemenu">
        <ul class="nav navbar-nav navbar-right" style="padding-right: 150px;" >
        <% if user_signed_in? %>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-home" aria-hidden="true" style="color: #9d9d9d;"> <%= link_to "Home", user_path(current_user.id) %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-user" aria-hidden="true"> <%= link_to 'Users', users_path %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-book" aria-hidden="true"> <%= link_to 'Books', books_path %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"> <%= link_to 'logout', destroy_user_session_path, method: :delete %></span>
          </li>
        <% else %>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-home" aria-hidden="true"> <%= link_to "Home", root_path %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-paperclip" aria-hidden="true"> <%= link_to "About", home_about_path %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"> <%= link_to "sign up", new_user_registration_path %></span>
          </li>
          <li class="side-bar" style="color: #9d9d9d; padding-right: 30px;">
            <span class="glyphicon glyphicon-log-in" aria-hidden="true"> <%= link_to "login", new_user_session_path %></span>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
