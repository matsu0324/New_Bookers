<!DOCTYPE html>
<html>
  <head>
    <title>NewBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header" style="background-color: black; height: 100px;">
      <span style="color: white">Bookers</span>
      <nav id="slidemenu">
        <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="side-bar">
            <%= link_to "Home", user_path(current_user.id) %>
          </li>
          <li class="side-bar">
            <%= link_to 'Users', users_path %>
          </li>
          <li class="side-bar">
            <%= link_to 'Books', books_path %>
          </li>
            <%= link_to 'logout', destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="side-bar">
            <%= link_to "Home", root_path %>
          </li>
          <li class="side-bar">
            <%= link_to "About", root_path %>
          </li>
          <li class="side-bar">
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li class="side-bar">
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
        </ul>
      </nav>
    </div>
  <%= yield %>
  </body>
</html>
