<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <% if flash[:notice] %>
      <div class="flash" style="color: #00ff7f;">
        <%= flash[:notice] %>
      </div>
     <% end %>
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="edit-button">
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user), class: "btn btn-default btn-block" do %>
　　　　  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
　　　　  <% end %>
　　　　<% end %>
　　　</div>

      <div class="create-book">
        <h2><b>New book</b></h2>
          <%= form_with model:@book, local:true do |f| %>
            <h3 class="book-title">Title</h3>
          <%= f.text_field :title %>
            <h3 class="book-opinion">Opinion</h3>
          <%= f.text_area :body %>
          <%= f.submit "Create Book", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %><%= link_to @book.user.name, user_path(@user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><button class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></button></button></td>
              <td><button class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></button></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      </div>
  </div>
</div>