<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
　　<div id="error_explanation" class="alert alert-danger">
      <h2 class="error"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
      </ul>
      <% end %>
    </div>
    <% end %>
    <%= render 'users/side_bar', user: @user %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %><%= link_to @book.user.name, user_path(@user.id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><button class="btn btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></button></button></td>
              <td><button class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></button></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      </div>
  </div>
</div>