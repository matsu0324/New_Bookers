<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
　　<div id="error_explanation" class="alert alert-danger">
      <h2 class="error"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
      </ul>
      <% end %>
    </div>
    <% end %>
   <%= render 'users/side_bar', user: @user, book: @book %>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <%= link_to user_path(book.user.id) do %>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %></td>
               <% end %>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>